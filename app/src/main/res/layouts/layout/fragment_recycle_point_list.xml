<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="3dp"
    android:padding="2dp"
    android:background="@drawable/shape_stroke_layout"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/person_recycle_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/person_recycle_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="페트병" />

    <TextView
        android:id="@+id/person_recycle_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:text="2020-01-13" />

    <TextView
        android:id="@+id/person_recycle_item_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="30p" />
</LinearLayout>